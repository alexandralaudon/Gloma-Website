<div class="container">
  <div class='col-md-offset-3 col-md-6'>
    <div class='well'>
      <div class='page-header'>
        <h1>Admin Sign In</h1>
          <br>
          <%= form_tag admin_path do |f| %>
            <div class='form-group'>
              <%= label_tag :username, 'Username', class: "control-label" %>
              <%= text_field_tag :username, '', class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag :password, 'Password', class:"control-label" %>
              <%= password_field_tag :password, '', class:"form-control" %>
            </div>
            <div class="form-group">
              <%= submit_tag "Sign In", class:'btn btn-primary' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
