<%= form_for @article, url:structures_path do |f| %>
<div class='form-horizontal'>
  <div class='form-group'>
    <%= f.label :title, class: "col-md-2 control-label" %>
    <div class='col-md-5'>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :link, class: "col-md-2 control-label" %>
    <div class='col-md-5'>
      <%= f.text_field :link, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :label_order, class: "col-md-2 control-label" %>
    <div class='col-md-5'>
      <%= f.number_field :label_order, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :category, class: "col-md-2 control-label" %>
    <div class='col-md-5'>
      <%= f.text_field :category, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit button_nm, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', structures_path, class: 'btn btn-default' %>

      <% if controller.action_name == 'edit'  %>
      <%= link_to 'Delete Article', structure_path, method: :delete, class:'btn btn-danger' %>
      <% end %>
    </div>
  </div>

</div>


<% end %>
