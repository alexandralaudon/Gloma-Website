<!DOCTYPE html>
<html>
<head>
  <title>Yay for Gloma</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Gloria Kestenbaum", root_path, class:"navbar-brand" %>
        <% if current_user %>
          <div class="nav navbar-nav navbar-right">
            <ul><%= link_to 'Sign out', sign_out_path, method: :delete %></ul>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="container">
    <!-- Adding create/update/destroy task note if relevant -->
    <% if notice %>
      <p class="alert alert-success" role="alert"><%= flash[:notice] %></p>
    <% end %>

    <%= yield %>

    <div class="page-header">
    </div>

    <footer class="footer">

      <div class="col-md-9">
        <%= link_to "Home", root_path %>
      </div>

      <div class="col-md-3 text-right">
        <%=link_to "https://www.linkedin.com/pub/gloria-kestenbaum/0/aa1/48" do %>
        <%=image_tag("linkedin.jpg", height:"25")%>
        <%end%>
      </div>
    </footer>

  </div>

</body>
</html>
